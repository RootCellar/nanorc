syntax "JSON" "\.json$"
header "^\{$"

# You can't add a comment to JSON.
comment ""

# Operators
color brightwhite "[(){}]" "\[" "\]"

# Values

## Numbers
color brightyellow   "\<[-]?[1-9][0-9]*([Ee][+-]?[0-9]+)?\>"  "\<[-]?[0](\.[0-9]+)?\>"

## Null
color brightcyan  "\<null\>"

## Boolean
color brightmagenta "\<(true|false)\>"

## String
color brightgreen ""(\\.|[^"])*"|'(\\.|[^'])*'"

# Keys
color brightred "\"(\\"|[^"])*\"[[:space:]]*:"  "'(\'|[^'])*'[[:space:]]*:"
color magenta   "\\u[0-9a-fA-F]{4}|\\[bfnrt'"/\\]"

# Whitespace
color ,green "[[:space:]]+$"
color ,red "	+ +| +	+"
